@page
@model Microsoft.AspNetCore.Identity.UI.V4.Pages.Account.Internal.LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}


<div class="text-center text-light" style="text-transform: none">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <p>
        You have requested to log in with a recovery code. 
    </p>
    <p>
        This login will not be remembered until you provide
        an authenticator app code at log in or disable 2FA and log in again.
    </p>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.RecoveryCode" ></label>
            <input asp-for="Input.RecoveryCode" class="form-control" style="text-align:center; width:250px; margin: 0 auto" autocomplete="off" />
            <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 100px">Log in</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}