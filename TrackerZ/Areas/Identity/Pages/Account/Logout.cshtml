@page
@model Microsoft.AspNetCore.Identity.UI.V4.Pages.Account.Internal.LogoutModel
@using TrackerZ.Views.Home
@{
    ViewData["Title"] = "Logout";
}
<div class="text-light text-center" style="text-transform: none; background:#1a1a1d">
    <h1><span id="tracker">L</span>og Out</h1>
    <hr />
    <form class="form-inline" method="post" action="/Identity/Account/Logout?returnUrl=%2F%3Fpage%3D%252F" asp-antiforgery="true">
        <button type="submit" class="btn btn-primary" style="width:200px; margin:0 auto">Log Out</button>
    </form>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary m-1 mt-3 @ManageNavMenu.IndexNavClass(ViewContext)" style="width:200px; margin:0 auto">Return</a>
</div>