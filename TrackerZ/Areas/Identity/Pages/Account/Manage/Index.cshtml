@page
@model Microsoft.AspNetCore.Identity.UI.V4.Pages.Account.Manage.Internal.IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = Microsoft.AspNetCore.Identity.UI.V4.Pages.Account.Manage.Internal.ManageNavPages.Index;
}

<h4 style="text-align:center"><span style="color:#52d6f4">P</span>rofile</h4>
<partial name="_StatusMessage" for="StatusMessage" />
    <div style="margin: 0 auto">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group" style="display:grid; grid-template-rows:auto; grid-template-columns: 150px auto 10px">
                <label asp-for="Username" class="text-light" 
                       style="grid-column-start: 1; grid-column-end: 2; line-height: 38px"><span style="color:#52d6f4">U</span>sername</label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group" style="display:grid; grid-template-rows:auto; grid-template-columns: 150px auto 10px">
                <label asp-for="Input.PhoneNumber" class="text-light" 
                       style="grid-column-start: 1; grid-column-end: 2; line-height: 38px"><span style="color:#52d6f4">P</span>hone Number</label>
                <input asp-for="Input.PhoneNumber" class="form-control"/>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary" style="width:100px">Save</button>
        </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}