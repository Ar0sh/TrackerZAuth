@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<aside class="page-sidebar bg-dark">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary m-1 mt-3">Home</a>
    <a asp-controller="Home" asp-action="Table" class="btn btn-primary m-1 mt-3">Table</a>
    <a asp-controller="Home" asp-action="New" class="btn btn-primary m-1 mt-3">New Incident</a>
</aside>
<nav class="page-nav text-left bg-dark">
    <h3 style="text-align:center; color:white">Manage your account</h3>
</nav>
<main class="page-scroll bg-dark">
    <div class="container">
        <div>
            <h4>Change your account settings</h4>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    <partial name="_ManageNav" />
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </div>

        @section Scripts {
            @RenderSection("Scripts", required: false)
        }

    </div>
</main>
