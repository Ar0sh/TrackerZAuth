@model BugsViewModel

    <script type="text/javascript">
        function validate() {
            var goon = true;
            if (document.getElementById('idTitle').value == '') {
                document.getElementById('lblTitleID').innerHTML = 'Input required';
                goon = false;
            }
            else {
                document.getElementById('lblTitleID').innerHTML = '';
            }
            if (document.getElementById('idSummary').value == '') {
                document.getElementById('lblSummaryID').innerHTML = 'Input required';
                goon = false;
            }
            else {
                document.getElementById('lblSummaryID').innerHTML = '';
            }
            if (goon == false) {
                return false;
            }
            else
                return true;
        }
    </script>

    <aside class="page-sidebar" style="background: #1A1A1D">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary m-1 mt-3" style="background-color:#950740">Home</a>
        <a asp-controller="Home" asp-action="Table" class="btn btn-primary m-1 mt-3" style="background-color:#950740">Table</a>
        <a class="btn btn-disabled m-1 mt-3" style="background-color:#4e4e50; color:#1a1a1d">New Incident</a>
    </aside>
    <nav class="page-nav text-left" style="background: #1A1A1D">
        <h3 style="text-align:center; color:white">New Incident</h3>
    </nav>
    <main class="page-main" style="background: #1A1A1D">
        <form method="post" asp-action="SubmitBug" onsubmit="return validate()">
            <div style="display:grid; grid-template-rows:auto; grid-template-columns: 100px 50px auto 120px">
                <h4 style="grid-column-start: 1; grid-column-end: 2">
                    Title
                </h4>
                <div style="grid-column-start: 3; grid-column-end: 4">
                    <textarea type="text" class="text-sm-left textarea-noresize" name="title" id="idTitle" value=""></textarea>
                </div>
                <div style="grid-column-start: 4; grid-column-end: 5">
                    <label id="lblTitleID" style="float:left; color:red; text-transform:none; margin-left: 10px; margin-top: 3px"></label>
                </div>
                <h4 style="grid-column-start: 1; grid-column-end: 2">
                    Category
                </h4>
                <div style="grid-column-start: 3; grid-column-end: 4">
                    <div style="float:left; padding:5px">
                        <select name="category">
                            @foreach (var category in Model.BaseCategory)
                            {
                                <option value="@category.CatId">@category.CatName</option>
                            }
                        </select>
                    </div>
                </div>
                <h4 style="grid-column-start: 1; grid-column-end: 2">
                    Summary
                </h4>
                <div style="grid-column-start: 3; grid-column-end: 4">
                    <textarea type="text" class="text-sm-left textarea-text" name="text" id="idSummary" value=""></textarea>
                </div>
                <div style="grid-column-start: 4; grid-column-end: 5">
                    <label id="lblSummaryID"
                            style="float:left; color:red; text-transform:none; margin-left: 10px; margin-top: 3px"></label>
                </div>
                <h4 style="grid-column-start: 1; grid-column-end: 2">
                    Status
                </h4>
                <div style="grid-column-start: 3; grid-column-end: 4">
                    <div style="float:left; padding:5px">
                        <select name="status">
                            <option value="Open">Open</option>
                            <option value="Closed">Closed</option>
                        </select>
                    </div>
                </div>
                <div style="grid-column-start: 1; grid-column-end: 5">
                    <button type="submit" class="btn btn-primary m-1" style="width: 100px; background-color:#950740">Submit</button>
                    <a asp-controller="Home" asp-action="Index" style="width: 100px; text-transform:none" class="btn btn-delete m-1">Cancel</a>
                </div>
            </div>
        </form>
    </main>